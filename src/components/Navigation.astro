---
// Navigation Component
---

<nav class="fixed top-0 left-0 right-0 bg-white/95 backdrop-blur-sm border-b border-gray-200 z-50">
	<div class="container mx-auto px-4">
		<div class="flex items-center justify-between h-16">
			<!-- Logo -->
			<div class="flex items-center gap-2">
				<div class="w-8 h-8 bg-primary-600 rounded-lg flex items-center justify-center">
					<svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
					</svg>
				</div>
				<span class="font-bold text-lg text-gray-900">
					<span class="text-primary-600">Haikalira</span> Enterprise
				</span>
			</div>

			<!-- Desktop Navigation -->
			<div class="hidden md:flex items-center gap-8">
				<a href="#hero" class="text-gray-700 hover:text-primary-600 transition-colors font-medium">Utama</a>
				<a href="#tentang" class="text-gray-700 hover:text-primary-600 transition-colors font-medium">Tentang</a>
				<a href="#perkhidmatan" class="text-gray-700 hover:text-primary-600 transition-colors font-medium">Perkhidmatan</a>
				<a href="#galeri" class="text-gray-700 hover:text-primary-600 transition-colors font-medium">Galeri</a>
				<a href="#kawasan" class="text-gray-700 hover:text-primary-600 transition-colors font-medium">Kawasan</a>
				<a href="#hubungi" class="bg-primary-600 text-white px-4 py-2 rounded-lg font-medium hover:bg-primary-700 transition-colors">
					Hubungi
				</a>
			</div>

			<!-- Mobile Menu Button -->
			<button id="mobile-menu-btn" class="md:hidden p-2 text-gray-700 hover:text-primary-600">
				<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
				</svg>
			</button>
		</div>

		<!-- Mobile Navigation -->
		<div id="mobile-menu" class="hidden md:hidden border-t border-gray-200">
			<div class="py-4 space-y-2">
				<a href="#hero" class="block py-2 text-gray-700 hover:text-primary-600 transition-colors font-medium">Utama</a>
				<a href="#tentang" class="block py-2 text-gray-700 hover:text-primary-600 transition-colors font-medium">Tentang</a>
				<a href="#perkhidmatan" class="block py-2 text-gray-700 hover:text-primary-600 transition-colors font-medium">Perkhidmatan</a>
				<a href="#galeri" class="block py-2 text-gray-700 hover:text-primary-600 transition-colors font-medium">Galeri</a>
				<a href="#kawasan" class="block py-2 text-gray-700 hover:text-primary-600 transition-colors font-medium">Kawasan</a>
				<a href="#hubungi" class="block py-2 text-primary-600 font-medium">Hubungi</a>
			</div>
		</div>
	</div>
</nav>

<script>
	// Mobile menu toggle
	document.addEventListener('DOMContentLoaded', () => {
		const mobileMenuBtn = document.getElementById('mobile-menu-btn');
		const mobileMenu = document.getElementById('mobile-menu');

		if (mobileMenuBtn && mobileMenu) {
			mobileMenuBtn.addEventListener('click', () => {
				mobileMenu.classList.toggle('hidden');
			});

			// Close mobile menu when clicking on links
			const mobileLinks = mobileMenu.querySelectorAll('a');
			mobileLinks.forEach(link => {
				link.addEventListener('click', () => {
					mobileMenu.classList.add('hidden');
				});
			});
		}
	});
</script>