<section id="kawasan" class="py-20 bg-white">
	<div class="container mx-auto px-4">
		<div class="max-w-4xl mx-auto">
			<!-- Section Header -->
			<div class="text-center mb-16 fade-in">
				<h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">Kawasan Liputan</h2>
				<div class="w-24 h-1 bg-primary-600 mx-auto rounded-full mb-6"></div>
				<p class="text-xl text-gray-600">
					Meliputi kawasan strategik di Lembah Klang dan kawasan sekitarnya dengan perkhidmatan yang konsisten
				</p>
			</div>

			<!-- Coverage Areas -->
			<div class="grid md:grid-cols-2 gap-12 items-center">
				<!-- Map Illustration -->
				<div class="fade-in">
					<div class="relative bg-gradient-to-br from-primary-50 to-primary-100 rounded-2xl p-8 h-80 flex items-center justify-center">
						<div class="text-center">
							<svg class="w-24 h-24 text-primary-600 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
							</svg>
							<h3 class="text-xl font-bold text-primary-900 mb-2">Klang Valley</h3>
							<p class="text-primary-700">Zon Perkhidmatan Utama</p>
						</div>
						
						<!-- Floating pins -->
						<div class="absolute top-4 right-8 w-4 h-4 bg-primary-600 rounded-full animate-pulse"></div>
						<div class="absolute bottom-12 left-6 w-3 h-3 bg-primary-500 rounded-full animate-pulse" style="animation-delay: 0.5s;"></div>
						<div class="absolute top-16 left-12 w-3 h-3 bg-primary-500 rounded-full animate-pulse" style="animation-delay: 1s;"></div>
					</div>
				</div>

				<!-- Areas List -->
				<div class="fade-in">
					<h3 class="text-2xl font-bold text-gray-900 mb-8">Kawasan Liputan Perkhidmatan:</h3>
					
