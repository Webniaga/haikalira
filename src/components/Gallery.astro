---
// Gallery Component
---

<section id="galeri" class="py-20 bg-white">
	<div class="container mx-auto px-4">
		<div class="max-w-6xl mx-auto">
			<!-- Section Header -->
			<div class="text-center mb-16 fade-in">
				<h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">Galeri Kerja Kami</h2>
				<div class="w-24 h-1 bg-primary-600 mx-auto rounded-full mb-6"></div>
				<p class="text-xl text-gray-600 max-w-2xl mx-auto">
					Koleksi projek yang telah berjaya diselesaikan dengan standard kualiti tinggi
				</p>
			</div>

			<!-- Gallery Grid -->
			<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
				<!-- Gallery Item 1 -->
				<div class="group relative overflow-hidden rounded-2xl shadow-lg hover:shadow-xl transition-all duration-300 fade-in">
					<img 
						src="https://images.pexels.com/photos/1216589/pexels-photo-1216589.jpeg?auto=compress&cs=tinysrgb&w=600&h=400&fit=crop" 
						alt="Kerja tukang - Pemasangan kabinet" 
						class="w-full h-64 object-cover group-hover:scale-110 transition-transform duration-500"
					/>
					<div class="absolute inset-0 bg-gradient-to-t from-black/70 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300">
						<div class="absolute bottom-4 left-4 right-4 text-white">
							<h3 class="font-semibold text-lg mb-1">Pemasangan Kabinet</h3>
							<p class="text-sm text-gray-200">Kerja tukang - Bangi</p>
						</div>
					</div>
				</div>

				<!-- Gallery Item 2 -->
				<div class="group relative overflow-hidden rounded-2xl shadow-lg hover:shadow-xl transition-all duration-300 fade-in">
					<img 
						src="https://images.pexels.com/photos/257736/pexels-photo-257736.jpeg?auto=compress&cs=tinysrgb&w=600&h=400&fit=crop" 
						alt="Pendawaian elektrik - Rumah teres" 
						class="w-full h-64 object-cover group-hover:scale-110 transition-transform duration-500"
					/>
					<div class="absolute inset-0 bg-gradient-to-t from-black/70 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300">
						<div class="absolute bottom-4 left-4 right-4 text-white">
							<h3 class="font-semibold text-lg mb-1">Pendawaian Elektrik</h3>
							<p class="text-sm text-gray-200">Wiring - Putrajaya</p>
						</div>
					</div>
				</div>

				<!-- Gallery Item 3 -->
				<div class="group relative overflow-hidden rounded-2xl shadow-lg hover:shadow-xl transition-all duration-300 fade-in">
					<img 
						src="https://images.pexels.com/photos/162553/keys-workshop-mechanic-tools-162553.jpeg?auto=compress&cs=tinysrgb&w=600&h=400&fit=crop" 
						alt="Repair aircond - Kondominium" 
						class="w-full h-64 object-cover group-hover:scale-110 transition-transform duration-500"
					/>
					<div class="absolute inset-0 bg-gradient-to-t from-black/70 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300">
						<div class="absolute bottom-4 left-4 right-4 text-white">
							<h3 class="font-semibold text-lg mb-1">Repair Aircond</h3>
							<p class="text-sm text-gray-200">Servis - Kajang</p>
						</div>
					</div>
				</div>

				<!-- Gallery Item 4 -->
				<div class="group relative overflow-hidden rounded-2xl shadow-lg hover:shadow-xl transition-all duration-300 fade-in">
					<img 
						src="https://images.pexels.com/photos/3760067/pexels-photo-3760067.jpeg?auto=compress&cs=tinysrgb&w=600&h=400&fit=crop" 
						alt="Renovation dapur - Rumah banglo" 
						class="w-full h-64 object-cover group-hover:scale-110 transition-transform duration-500"
					/>
					<div class="absolute inset-0 bg-gradient-to-t from-black/70 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300">
						<div class="absolute bottom-4 left-4 right-4 text-white">
							<h3 class="font-semibold text-lg mb-1">Renovation Dapur</h3>
							<p class="text-sm text-gray-200">Kerja tukang - Serdang</p>
						</div>
					</div>
				</div>

				<!-- Gallery Item 5 -->
				<div class="group relative overflow-hidden rounded-2xl shadow-lg hover:shadow-xl transition-all duration-300 fade-in">
					<img 
						src="https://images.pexels.com/photos/1216589/pexels-photo-1216589.jpeg?auto=compress&cs=tinysrgb&w=600&h=400&fit=crop" 
						alt="Pemasangan pintu - Pejabat" 
						class="w-full h-64 object-cover group-hover:scale-110 transition-transform duration-500"
					/>
					<div class="absolute inset-0 bg-gradient-to-t from-black/70 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300">
						<div class="absolute bottom-4 left-4 right-4 text-white">
							<h3 class="font-semibold text-lg mb-1">Pemasangan Pintu</h3>
							<p class="text-sm text-gray-200">Kerja tukang - Puchong</p>
						</div>
					</div>
				</div>

				<!-- Gallery Item 6 -->
				<div class="group relative overflow-hidden rounded-2xl shadow-lg hover:shadow-xl transition-all duration-300 fade-in">
					<img 
						src="https://images.pexels.com/photos/257736/pexels-photo-257736.jpeg?auto=compress&cs=tinysrgb&w=600&h=400&fit=crop" 
						alt="Upgrade panel elektrik - Kedai" 
						class="w-full h-64 object-cover group-hover:scale-110 transition-transform duration-500"
					/>
					<div class="absolute inset-0 bg-gradient-to-t from-black/70 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300">
						<div class="absolute bottom-4 left-4 right-4 text-white">
							<h3 class="font-semibold text-lg mb-1">Upgrade Panel Elektrik</h3>
							<p class="text-sm text-gray-200">Wiring - Cheras</p>
						</div>
					</div>
				</div>
			</div>

			<!-- View More Button -->
			<div class="text-center mt-12 fade-in">
				<a href="#hubungi" class="inline-flex items-center gap-2 bg-primary-600 text-white px-6 py-3 rounded-xl font-semibold hover:bg-primary-700 transition-all duration-300 transform hover:scale-105">
					<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
					</svg>
					Lihat Projek Anda Seterusnya
				</a>
			</div>
		</div>
	</div>
</section>