---
// Hero Component
---

<section id="hero" class="relative min-h-screen flex items-center justify-center overflow-hidden">
  <!-- Background Image -->
  <div class="absolute inset-0 z-0">
    <img 
      src="https://images.pexels.com/photos/4103259/pexels-photo-4103259.jpeg?auto=compress&cs=tinysrgb&w=1920&h=1080&fit=crop" 
      alt="Construction tools background" 
      class="w-full h-full object-cover"
    />
    <!-- Enhanced overlay for better text visibility -->
    <div class="absolute inset-0 bg-gradient-to-br from-white/80 via-white/70 to-gray-900/40"></div>
    <!-- Additional dark overlay at the bottom for scroll indicator -->
    <div class="absolute bottom-0 left-0 right-0 h-32 bg-gradient-to-t from-black/30 to-transparent"></div>
  </div>

  <!-- Hero Content -->
  <div class="container mx-auto px-4 py-20 relative z-10">
    <div class="max-w-4xl mx-auto text-center">
      <!-- Company Name with enhanced visibility -->
      <div class="mb-8 fade-in">
        <!-- Add subtle background to company name for extra contrast -->
        <div class="inline-block bg-white/90 backdrop-blur-sm rounded-2xl px-8 py-6 shadow-lg mb-6">
          <!-- Company Logo -->
          <div class="flex justify-center mb-6">
          
           <img src="https://img.webniaga.my/haikalira/logo.jpg" alt="Haikalira Enterprise Logo" class="w-full h-full object-contain rounded-2xl">

          </div>
          
          <h1 class="text-4xl md:text-6xl font-bold text-gray-900 mb-4">
            <span class="text-primary-600">Haikalira</span> Enterprise
          </h1>
          <div class="flex flex-col sm:flex-row justify-center items-center gap-4 text-sm text-gray-700">
            <div class="flex items-center gap-2">
              <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M4 4a2 2 0 00-2 2v8a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2H4zm3 6V8h6v2H7z" clip-rule="evenodd"></path>
              </svg>
              <span class="font-medium">SSM: 003715129-H</span>
            </div>
            <div class="flex items-center gap-2">
              <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M6 6V5a3 3 0 013-3h2a3 3 0 013 3v1h2a2 2 0 012 2v6a2 2 0 01-2 2H4a2 2 0 01-2-2V8a2 2 0 012-2h2zm6-1a1 1 0 00-1-1h-2a1 1 0 00-1 1v1h4V5zm-3 7a1 1 0 102 0 1 1 0 00-2 0z" clip-rule="evenodd"></path>
              </svg>
              <span class="font-medium">CIDB: 0120250527-SL155555</span>
            </div>
          </div>
        </div>
      </div>

      <!-- Tagline with enhanced background -->
      <div class="mb-12 fade-in">
        <div class="bg-white/85 backdrop-blur-sm rounded-xl px-6 py-4 shadow-md inline-block">
          <p class="text-xl md:text-2xl text-gray-800 font-medium leading-relaxed max-w-3xl">
            "Penyedia perkhidmatan teknikal bertauliah dengan kepakaran dalam kerja pembinaan, pembaikan dan sistem elektrik"
          </p>
        </div>
      </div>

      <!-- CTA Button with enhanced shadow -->
      <div class="fade-in">
        <a href="#hubungi" class="inline-flex items-center gap-3 bg-primary-600 text-white px-8 py-4 rounded-xl font-semibold text-lg hover:bg-primary-700 transform hover:scale-105 transition-all duration-300 shadow-xl hover:shadow-2xl border-2 border-primary-600 hover:border-primary-700">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
          </svg>
          Hubungi Kami Sekarang
        </a>
      </div>
    </div>
  </div>

  <!-- Scroll Indicator with better visibility -->
  <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce z-10">
    <div class="bg-white/80 backdrop-blur-sm rounded-full p-2 shadow-lg">
      <svg class="w-6 h-6 text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
      </svg>
    </div>
  </div>
</section>